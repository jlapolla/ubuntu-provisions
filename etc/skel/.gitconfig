# Global Git configuration.
#
# Place this file in your home directory.

[core]
	autocrlf = input
	whitespace = blank-at-eol,space-before-tab,indent-with-non-tab,blank-at-eof,tabwidth=4
	editor = vim
	safecrlf = true
	excludesfile = ~/.gitignore_global
[color]
	branch = auto
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	tool = vimdiff
[mergetool]
	prompt = false
[push]
	default = simple
